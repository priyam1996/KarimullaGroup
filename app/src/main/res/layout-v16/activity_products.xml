<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eef1ee"
    tools:context=".Products">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Our Products"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="@font/audiowide"
        android:layout_centerHorizontal="true"/>

    <android.support.v7.widget.CardView
        android:id="@+id/barbed_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:alwaysDrawnWithCache="false"
        android:background="#0a7303"
        app:cardBackgroundColor="#8888f5"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/heading">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <TextView
                android:id="@+id/product1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:text="@string/tata_barbed_wire"
                android:textColor="#302b2b"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/product1_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product1"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/barbed_wire" />

            <TextView
                android:id="@+id/barbed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:fontFamily="@font/lato"
                android:text="@string/barbed_wire"
                android:layout_below="@id/product1_image"/>
            <Button
                android:id="@+id/barbed_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/barbed_text"
                android:layout_centerHorizontal="true"
                android:background="#c40a0a"
                android:textColor="#ffffff"
                android:text="@string/more"
                android:fontFamily="@font/lato"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/chain_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:alwaysDrawnWithCache="false"
        android:background="#0a7303"
        app:cardBackgroundColor="#8888f5"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/barbed_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <TextView
                android:id="@+id/product2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:text="@string/tata_chain_link"
                android:textColor="#302b2b"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/product2_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product2"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/chainlink" />

            <TextView
                android:id="@+id/chain_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:fontFamily="@font/lato"
                android:text="@string/chain_link"
                android:layout_below="@id/product2_image"/>
            <Button
                android:id="@+id/chain_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chain_text"
                android:layout_centerHorizontal="true"
                android:background="#c40a0a"
                android:textColor="#ffffff"
                android:text="More"
                android:fontFamily="@font/lato"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/gi_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:alwaysDrawnWithCache="false"
        android:background="#0a7303"
        app:cardBackgroundColor="#8888f5"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/chain_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <TextView
                android:id="@+id/product3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:text="@string/tata_gi_wires"
                android:textColor="#302b2b"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/product3_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product3"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/giwire_fence" />

            <TextView
                android:id="@+id/gi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:fontFamily="@font/lato"
                android:text="@string/gi_wires"
                android:layout_below="@id/product3_image"/>
            <Button
                android:id="@+id/gi_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gi_text"
                android:layout_centerHorizontal="true"
                android:background="#c40a0a"
                android:textColor="#ffffff"
                android:text="More"
                android:fontFamily="@font/lato"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/solar_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:alwaysDrawnWithCache="false"
        android:background="#0a7303"
        app:cardBackgroundColor="#8888f5"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/gi_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <TextView
                android:id="@+id/product4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:text="@string/tata_solar_power_fence"
                android:textColor="#302b2b"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="10sp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/product4_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product4"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/solar_fence" />

            <TextView
                android:id="@+id/solar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:fontFamily="@font/lato"
                android:text="@string/solar_power"
                android:layout_below="@id/product4_image"/>
            <Button
                android:id="@+id/solar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/solar_text"
                android:layout_centerHorizontal="true"
                android:background="#c40a0a"
                android:textColor="#ffffff"
                android:text="More"
                android:fontFamily="@font/lato"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/ayush_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:alwaysDrawnWithCache="false"
        android:background="#0a7303"
        app:cardBackgroundColor="#8888f5"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        android:layout_below="@id/solar_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">

            <RelativeLayout
                android:id="@+id/text_ayush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/product5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:text="@string/tata_g_i"
                android:textColor="#302b2b"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="4sp"
                android:layout_marginTop="10sp" />
            <TextView
                android:id="@+id/product5_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#077DCF"
                android:layout_toRightOf="@id/product5"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="4sp"
                android:text="@string/ayush_text"/>
            <TextView
                android:id="@+id/product5_sub1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/product5_sub"
                android:textColor="#302b2b"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:text="Wires"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/product5_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_ayush"
                android:layout_marginTop="5sp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ayush" />

            <TextView
                android:id="@+id/ayush_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:fontFamily="@font/lato"
                android:text="@string/ayush"
                android:layout_below="@id/product5_image"/>
            <Button
                android:id="@+id/ayush_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ayush_text"
                android:layout_centerHorizontal="true"
                android:background="#c40a0a"
                android:textColor="#ffffff"
                android:text="More"
                android:fontFamily="@font/lato"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="10sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>
</ScrollView>