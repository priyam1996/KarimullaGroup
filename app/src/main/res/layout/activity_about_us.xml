<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/banner_about"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:layout_below="@id/banner"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#0a7303"
        android:fontFamily="@font/audiowide"
        android:layout_centerHorizontal="true"/>
    <me.biubiubiu.justifytext.library.JustifyTextView
        android:id="@+id/text1_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_text1"
        android:layout_marginLeft="10sp"
        android:layout_below="@id/heading1"
        android:textColor="#252323"/>
    <me.biubiubiu.justifytext.library.JustifyTextView
        android:id="@+id/text2_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"

        android:text="@string/about_text2"
        android:layout_below="@id/text1_about"
        android:layout_marginTop="5sp"
        android:textColor="#252323"/>
    <TextView
        android:id="@+id/heading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quality"
        android:textColor="#ed0707"
        android:textSize="30sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_below="@id/text2_about"
        android:layout_margin="5dp"/>
    <me.biubiubiu.justifytext.library.JustifyTextView
        android:id="@+id/text3_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_text3"
        android:layout_below="@id/heading2"
        android:textColor="#252323"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="20sp"/>

</RelativeLayout>
</ScrollView>